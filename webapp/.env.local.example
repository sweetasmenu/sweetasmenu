# =====================================================
# SweetAsMenu Frontend Environment Variables
# =====================================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control!
# =====================================================

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# BACKEND API URL
# ===========================================
# Local development: http://localhost:8000
# Production: Your Render/Railway backend URL (e.g., https://sweetasmenu-api.onrender.com)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get this from https://dashboard.stripe.com/apikeys
# Use pk_test_... for development, pk_live_... for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ===========================================
# STRIPE PRICE IDS
# ===========================================
# Create these in Stripe Dashboard > Products
# Each plan needs both monthly and yearly prices

# Starter Plan ($39/month or $421.20/year = 10% off)
NEXT_PUBLIC_STRIPE_BASIC_MONTHLY_PRICE_ID=price_starter_monthly_id
NEXT_PUBLIC_STRIPE_BASIC_YEARLY_PRICE_ID=price_starter_yearly_id

# Professional Plan ($89/month or $961.20/year = 10% off)
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id

# Enterprise Plan ($199/month or $2,149.20/year = 10% off)
NEXT_PUBLIC_STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id
NEXT_PUBLIC_STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# APP CONFIGURATION
# ===========================================
# Default currency (NZD for New Zealand)
NEXT_PUBLIC_DEFAULT_CURRENCY=NZD

# Trial period in days
NEXT_PUBLIC_TRIAL_DAYS=14

# Max file upload size in MB
NEXT_PUBLIC_MAX_UPLOAD_SIZE_MB=10

# Allowed image types (comma-separated)
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
